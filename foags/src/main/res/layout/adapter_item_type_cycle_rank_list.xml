<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/rankingLevelView"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9EA7B9"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/headPicView"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nickNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:textColor="@color/color_282828"
                    android:textSize="15sp" />

                <com.sbl.foags.view.UserLevelView
                    android:visibility="gone"
                    android:id="@+id/levelView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:paddingLeft="5dp"
                    app:paddingTop="1dp"
                    app:paddingRight="5dp"
                    app:paddingBottom="1dp"
                    app:textSize="10sp" />


                <com.sbl.foags.view.UserMemberView
                    android:visibility="gone"
                    android:id="@+id/memberView"
                    android:layout_marginLeft="10dp"
                    app:paddingLeft="5dp"
                    app:paddingRight="8dp"
                    app:paddingTop="0dp"
                    app:paddingBottom="0dp"
                    app:drawablePadding="3dp"
                    app:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/descView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_9EA7B9"
                android:textSize="13sp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/rankTrendView"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <View
        android:layout_marginLeft="102dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F2F2F2" />

</LinearLayout>