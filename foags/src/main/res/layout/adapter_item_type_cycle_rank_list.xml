<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/rankingLevelView"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9EA7B9"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_marginLeft="15dp"
            android:id="@+id/headPicView"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nickNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:textColor="@color/color_282828"
                    android:textSize="15sp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/levelView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_user_level"
                    android:paddingLeft="5dp"
                    android:paddingTop="1dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="1dp"
                    android:text="LV11"
                    android:textColor="@color/color_FF5E99"
                    android:textSize="10sp" />


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/memberLayout"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="8dp"
                    android:background="@drawable/bg_user_member"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/memberIconView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:gravity="center"
                        android:id="@+id/memberView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/white"
                        android:textSize="10sp" />



                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/descView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_9EA7B9"
                android:textSize="13sp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/rankTrendView"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <View
        android:layout_marginLeft="102dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F2F2F2" />

</LinearLayout>