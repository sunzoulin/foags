<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">


        <ImageView
            android:id="@+id/headPicView"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginRight="10dp"
                    android:id="@+id/nickNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/levelView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_user_level"
                    android:paddingLeft="5dp"
                    android:paddingTop="1dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="1dp"
                    android:textColor="@color/color_FF5E99"
                    android:textSize="10sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:visibility="gone"
                    android:layout_marginRight="15dp"
                    android:id="@+id/addressView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_BECCD9"
                    android:textSize="13sp" />


                <TextView
                    android:text="@string/fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_BECCD9"
                    android:textSize="13sp" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:id="@+id/fansView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_BECCD9"
                    android:textSize="15sp" />


            </LinearLayout>



            <TextView
                android:layout_marginTop="1dp"
                android:visibility="invisible"
                android:id="@+id/tagsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_9EA7B9"
                android:textSize="13sp" />


        </LinearLayout>

        <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_user_not_follow"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="@string/follow"
            android:id="@+id/followView"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <View
        android:layout_marginLeft="79dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_F2F2F2" />

</LinearLayout>