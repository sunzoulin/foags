<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:orientation="vertical">


    <com.sbl.foags.view.MyAspectRatioFrameLayout
        app:myFrameAspectRatio="0.66"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.joooonho.SelectableRoundedImageView
            app:sriv_left_top_corner_radius="6dp"
            app:sriv_right_top_corner_radius="6dp"
            app:sriv_left_bottom_corner_radius="0dp"
            app:sriv_right_bottom_corner_radius="0dp"
            android:id="@+id/albumCoverView"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </com.sbl.foags.view.MyAspectRatioFrameLayout>

    <LinearLayout
        android:background="@drawable/bg_album_small_item_user_info"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/headPicView"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:scaleType="centerCrop"/>



        <TextView
            android:textStyle="bold"
            android:id="@+id/nickNameView"
            android:textColor="@color/color_333333"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>



        <TextView
            android:paddingRight="13dp"
            android:paddingLeft="13dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/bg_album_small_item_photo_count"
            android:id="@+id/countView"
            android:textStyle="bold"
            android:textColor="@color/color_BECCD9"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>