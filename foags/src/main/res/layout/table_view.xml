<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sbl.foags.view.CheckedTextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="1dp"
        android:gravity="center"
        android:textColor="@color/tab_title_color"
        android:textSize="10sp" />


    <com.sbl.foags.view.UnreadCountTextView
        android:id="@+id/tab_unread"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_alignTop="@+id/tab_title"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="-4dp"
        android:layout_toEndOf="@+id/tab_title"
        android:minWidth="17dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        app:maxValue="99" />

    <View
        android:id="@+id/tab_red_point"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_alignTop="@+id/tab_title"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="-4dp"
        android:layout_toEndOf="@+id/tab_title"
        android:background="@drawable/red_point" />

</RelativeLayout>

