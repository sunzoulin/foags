<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_common_title_layout"/>


    <androidx.core.widget.NestedScrollView
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/headPicLayout"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/color_333333"
                    android:text="@string/upload_head_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

                <ImageView
                    android:id="@+id/headPicView"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="centerCrop"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>

                <ImageView
                    android:src="@drawable/ic_right_arrow_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_E4E4E4"/>


            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/backgroundPicLayout"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/color_333333"
                    android:text="@string/upload_background_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>

                <ImageView
                    android:id="@+id/backgroundPicView"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:scaleType="centerCrop"
                    android:layout_width="44dp"
                    android:layout_height="34dp"/>

                <ImageView
                    android:src="@drawable/ic_right_arrow_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <View
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_E4E4E4"/>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/color_333333"
                    android:text="@string/nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:gravity="left|center_vertical"
                    android:inputType="text"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_9EA7B9"
                    android:background="@null"
                    android:hint="@string/please_input_you_nick_name"
                    android:layout_marginLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

            </LinearLayout>


            <View
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_E4E4E4"/>

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/genderLayout"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/color_333333"
                    android:text="@string/signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:gravity="left|center_vertical"
                    android:inputType="text"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/color_9EA7B9"
                    android:background="@null"
                    android:hint="@string/please_input_signature"
                    android:layout_marginLeft="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"/>

            </LinearLayout>


            <View
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_E4E4E4"/>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/submitView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:text="@string/submit_examine"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_select_identity_info_upload_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>