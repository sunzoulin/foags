<?xml version="1.0" encoding="utf-8"?>
<com.sbl.foags.view.MyAspectRatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/headerBG1View"
    android:background="@drawable/ic_dmb_bg"
    android:baselineAligned="false"
    android:clipChildren="false"
    app:myFrameAspectRatio="1.13">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="42dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:orientation="horizontal">

            <!-- 第二名 -->
            <LinearLayout
                android:id="@+id/secondLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipChildren="false">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-8dp"
                        android:layout_marginTop="-16dp"
                        android:src="@drawable/ic_paihang2" />


                    <View
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:background="@drawable/bg_type_cycle_rank_list_header_pic" />

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/secondHeadPicView"
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:layout_gravity="center" />


                </FrameLayout>


                <TextView
                    android:id="@+id/secondNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/secondDescView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_50FFFFFF"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- 第一名 -->
            <LinearLayout
                android:id="@+id/firstLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipChildren="false">



                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-7dp"
                        android:layout_marginTop="-14dp"
                        android:src="@drawable/ic_paihang1" />


                    <View
                        android:layout_width="67dp"
                        android:layout_height="67dp"
                        android:background="@drawable/bg_type_cycle_rank_list_header_pic" />


                    <ImageView
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:id="@+id/firstHeadPicView"
                        android:layout_width="63dp"
                        android:layout_height="63dp" />


                </FrameLayout>

                <TextView
                    android:id="@+id/firstNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxEms="5"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/firstDescView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_50FFFFFF"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- 第三名 -->
            <LinearLayout
                android:id="@+id/thirdLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_weight="1"
                android:clipChildren="false"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clipChildren="false">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-7dp"
                        android:layout_marginTop="-18dp"
                        android:src="@drawable/ic_paihang3" />

                    <View
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:background="@drawable/bg_type_cycle_rank_list_header_pic" />

                    <ImageView
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:id="@+id/thirdHeadPicView"
                        android:layout_width="48dp"
                        android:layout_height="48dp" />

                </FrameLayout>


                <TextView
                    android:id="@+id/thirdNameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/thirdDescView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:textColor="@color/color_50FFFFFF"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/headerBG2View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/ic_dmb_ph" />


    <View
        android:background="@drawable/ic_header_type_cycle_rank_list_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="-10dp"
        android:layout_gravity="bottom"/>



</com.sbl.foags.view.MyAspectRatioFrameLayout>