<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.sbl.foags.activity.cube.photo.CubePhotoDetailViewPager
        android:id="@+id/photoViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollFooter="@android:color/transparent"
        android:overScrollHeader="@android:color/transparent"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <FrameLayout
        android:layout_gravity="top"
        android:id="@+id/headerLayout"
        android:background="@color/color_80333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="left|center_vertical"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backView"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_white"/>

            <ImageView
                android:id="@+id/headPicView"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/nickNameView"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="13sp"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currentCountView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="/"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/totalCountView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/followView"
            android:padding="10dp"
            android:src="@drawable/ic_image_follow"
            android:layout_gravity="right|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

    <LinearLayout
        android:layout_gravity="bottom"
        android:id="@+id/footerLayout"
        android:background="@color/color_80333333"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/commentView"
            android:layout_margin="10dp"
            android:background="@drawable/bg_cube_photo_detail_edittext"
            android:paddingLeft="14dp"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:paddingRight="14dp"
            android:text="@string/please_comment"
            android:textColor="@color/color_BECCD9"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/commentCountView"
            android:text="0"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableLeft="@drawable/ic_dongtai_pinglun"
            android:drawablePadding="5dp"
            android:textSize="12sp"
            android:textColor="@color/color_BECCD9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/likeCountView"
            android:text="0"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableLeft="@drawable/ic_dongtai_shoucang"
            android:drawablePadding="5dp"
            android:textSize="12sp"
            android:textColor="@color/color_BECCD9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/shareView"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_dongtai_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


    </LinearLayout>


</FrameLayout>

