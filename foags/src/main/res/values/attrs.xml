<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->

    <declare-styleable name="FoldTextView">
        <attr name="showMaxLine" format="integer" />
        <attr name="tipGravity" format="integer" />
        <attr name="tipColor" format="reference|color" />
        <attr name="tipClickable" format="boolean" />
        <attr name="foldText" format="string" />
        <attr name="expandText" format="string" />
        <attr name="showTipAfterExpand" format="boolean" />
        <attr name="isSetParentClick" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer" />
        <attr name="flowlayout_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MyAspectRatioFrameLayout">
        <attr name="myFrameAspectRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="MyAspectRatioLinearLayout">
        <attr name="myLinearAspectRatio" format="float" />
    </declare-styleable>

    <attr name="textColor" format="color" />
    <attr name="textSize" format="dimension" />
    <attr name="text" format="string" />
    <attr name="showBack" format="boolean" />
    <attr name="icon" format="reference" />
    <attr name="title" format="integer" />
    <attr name="textId" format="integer" />
    <attr name="description" format="integer" />
    <attr format="integer" name="duration"/>

    <declare-styleable name="LoadingLayout">
        <attr name="loadingView" format="reference" />
        <attr name="errorView" format="reference" />
        <attr name="retryView" format="reference" />
        <attr name="emptyView" format="reference" />
    </declare-styleable>

    <declare-styleable name="ClipViewLayout">
        <attr name="clipType" format="enum">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="mHorizontalPadding" format="dimension" />
        <attr name="clipBorderWidth" format="dimension" />
    </declare-styleable>

    <!-- tableView -->
    <declare-styleable name="TableView">
        <attr name="text" />
        <attr name="textColor" />
        <attr name="drawable" format="reference" />
    </declare-styleable>

    <!-- 标题栏 -->
    <declare-styleable name="TitleViewWithButton">
        <attr name="title" />
        <attr name="showBack" />
        <attr name="textColor" />
        <attr name="showRightButton" format="boolean" />
        <attr name="rightButtonDrawable" format="reference" />
    </declare-styleable>

    <!-- 标题栏 -->
    <declare-styleable name="TitleViewWithText">
        <attr name="title" />
        <attr name="text" />
        <attr name="showBack" />
        <attr name="textColor" />
        <attr name="textSize" />
        <attr name="drawablePadding" format="dimension" />
        <attr name="textDrawable" format="reference" />
    </declare-styleable>

    <!-- 标题栏 -->
    <declare-styleable name="TitleView">
        <attr name="title" />
        <attr name="showBack" />
    </declare-styleable>

    <declare-styleable name="SettingItemLayout">
        <attr name="title" />
        <attr name="subTitle" />
        <attr name="text" />
    </declare-styleable>

    <declare-styleable name="SettingItemSwitch">
        <attr name="title" />
        <attr name="description" />
    </declare-styleable>

    <declare-styleable name="ChangeLanguageTextView">
        <attr name="textId" />
    </declare-styleable>

    <declare-styleable name="ChangeLanguageButton">
        <attr name="textId" />
    </declare-styleable>

    <declare-styleable name="SettingItemWithImageLayout">
        <attr name="title" />
        <attr name="description" />
        <attr name="icon" />
        <attr name="textId" />
    </declare-styleable>

    <!-- 扫边TextView -->
    <declare-styleable name="StrokeTextView">
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeColor" format="color" />
        <attr name="shadow" format="boolean" />
        <attr name="shadowRadius" format="dimension" />
    </declare-styleable>

    <!--未读数-->
    <declare-styleable name="UnreadCountTextView">
        <attr name="maxValue" format="integer" />
    </declare-styleable>

    <declare-styleable name="UserDescriptionView">
        <attr name="android:drawableStart" />
        <attr name="descTitle" format="string" />
        <attr name="descContent" format="string" />
    </declare-styleable>

    <declare-styleable name="UserDetailsView">
        <attr name="icon" />
        <attr name="detailTitle" format="string" />
        <attr name="detailContent" format="string" />
        <attr name="showLine" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ClearEditText">
        <attr name="android:hint" />
        <attr name="android:inputType" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:textColorHint" />
        <attr name="android:drawableLeft" />
        <attr name="android:drawablePadding" />
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="hasShadow" format="boolean" />
        <attr name="primaryColor" format="color" />
        <attr name="primaryColorDark" format="color" />
        <attr name="offColor" format="color" />
        <attr name="offColorDark" format="color" />
        <attr name="shadowColor" format="color" />
        <attr name="ratioAspect" format="float" />
        <attr name="isOpened" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CountDownView">
        <attr name="maxCount" format="integer" />
        <attr name="format" format="string" />
    </declare-styleable>

    <!-- loadingView的自定义属性-->
    <declare-styleable name="UGLoadingView">
        <attr name="borderWidth" format="dimension" />
        <attr name="maxAngle" format="integer" />
        <attr name="borderColor" format="color" />
        <attr name="duration"  />
    </declare-styleable>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="myCirclePageIndicatorStyle" format="reference" />
    </declare-styleable>
    <declare-styleable name="CirclePageIndicator">
        <attr name="centered" format="boolean" />
        <attr name="fillColor" format="color" />
        <attr name="pageColor" format="color" />
        <attr name="android:orientation" />
        <attr name="radius" format="dimension" />
        <attr name="snap" format="boolean" />
        <attr name="myStrokeColor" format="color" />
        <attr name="myStrokeWidth" format="dimension" />
        <attr name="android:background" />
    </declare-styleable>

    <declare-styleable name="StrokeTextLayout">
        <attr name="strokeSideWidth" format="integer" />
        <attr name="strokeSideColor" format="color" />
    </declare-styleable>

    <declare-styleable name="VoiceLoadingView">
        <attr name="vlv_bg_color" format="color" />
    </declare-styleable>

    <declare-styleable name="UserLevelView">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:background" />
    </declare-styleable>

    <declare-styleable name="OTOVideoView">
        <attr name="android:textSize" />
        <attr name="android:background" />
    </declare-styleable>

    <declare-styleable name="GenderAndAgeView">
        <attr name="android:textSize" />
        <attr name="android:background" />
    </declare-styleable>

    <declare-styleable name="OnlineStatusView">
        <attr name="android:drawablePadding" />
        <attr name="textSize" />
        <attr name="iconSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="CheckedAndChangeShapeFrameLayout">
        <attr name="checkedColor" format="color" />
        <attr name="normalColor" format="color" />
        <attr name="android:checked" />
        <attr name="open" format="boolean" />
        <attr name="closeGravity" format="enum">
            <enum name="start" value="0" />
            <enum name="end" value="1" />
            <enum name="center" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="UGirlsHeatProgressTextView">
        <attr name="android:textSize" />
    </declare-styleable>

    <declare-styleable name="UGViewPageIndicator">
        <attr name="loop" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="OnLineTextView">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:background" />
    </declare-styleable>


    <declare-styleable name="SlideCardLayout">

        <!-- 高度的比例 -->
        <attr format="float" name="sizeRatio"/>

        <!-- 最多显示的个数 -->
        <attr format="integer" name="displayCount"/>

        <!-- 滑动的动画时长 -->
        <attr name="duration"/>

        <!-- 滑动加速器 -->
        <attr format="enum" name="interpolator">
            <enum name="linear" value="0"/>
            <enum name="decelerate" value="1"/>
            <enum name="accelerate" value="2"/>
            <enum name="accelerateDecelerate" value="3"/>
        </attr>

    </declare-styleable>
</resources>
