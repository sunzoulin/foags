<resources>

    <attr name="textColor" format="color" />
    <attr name="textSize" format="dimension" />

    <attr name="paddingLeft" format="dimension" />
    <attr name="paddingTop" format="dimension" />
    <attr name="paddingRight" format="dimension" />
    <attr name="paddingBottom" format="dimension" />

    <attr name="marginLeft" format="dimension" />
    <attr name="marginTop" format="dimension" />
    <attr name="marginRight" format="dimension" />
    <attr name="marginBottom" format="dimension" />
    <attr name="drawablePadding" format="dimension" />


    <attr name="text" format="string" />
    <attr name="showBack" format="boolean" />
    <attr name="icon" format="reference" />
    <attr name="title" format="integer" />
    <attr name="textId" format="integer" />
    <attr name="description" format="integer" />
    <attr format="integer" name="duration"/>


    <declare-styleable name="MyAspectRatioFrameLayout">
        <attr name="myFrameAspectRatio" format="float" />
    </declare-styleable>

    <declare-styleable name="MyAspectRatioLinearLayout">
        <attr name="myLinearAspectRatio" format="float" />
    </declare-styleable>


    <declare-styleable name="LoadingLayout">
        <attr name="loadingView" format="reference" />
        <attr name="errorView" format="reference" />
        <attr name="retryView" format="reference" />
        <attr name="emptyView" format="reference" />
    </declare-styleable>

    <declare-styleable name="TableView">
        <attr name="text" />
        <attr name="textColor" />
        <attr name="drawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="UnreadCountTextView">
        <attr name="maxValue" format="integer" />
    </declare-styleable>


    <declare-styleable name="UserLevelView">
        <attr name="textSize" />
        <attr name="paddingLeft" />
        <attr name="paddingTop" />
        <attr name="paddingRight" />
        <attr name="paddingBottom" />
    </declare-styleable>

    <declare-styleable name="UserMemberView">
        <attr name="textSize" />
        <attr name="paddingLeft" />
        <attr name="paddingTop" />
        <attr name="paddingRight" />
        <attr name="paddingBottom" />
        <attr name="drawablePadding" />
    </declare-styleable>


    <attr name="resize_mode" format="enum">
        <enum name="fit" value="0"/>
        <enum name="fixed_width" value="1"/>
        <enum name="fixed_height" value="2"/>
        <enum name="fill" value="3"/>
        <enum name="zoom" value="4"/>
    </attr>

    <declare-styleable name="ExoPlayerLayout">
        <attr name="resize_mode" />
    </declare-styleable>

</resources>
